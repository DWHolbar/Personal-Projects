# Project: Weather CLI App
# Description: A simple command-line interface (CLI) application that fetches and displays weather information for a given city using a public API.

import requests

def get_weather(city):
    api_key = "your_api_key_here"  # Replace with your API key from OpenWeatherMap or similar service
    base_url = "http://api.openweathermap.org/data/2.5/weather"
    params = {"q": city, "appid": api_key, "units": "metric"}
    
    try:
        response = requests.get(base_url, params=params)
        response.raise_for_status()
        data = response.json()
        
        weather = data["weather"][0]["description"]
        temperature = data["main"]["temp"]
        print(f"Weather in {city}: {weather}")
        print(f"Temperature: {temperature}Â°C")
    except requests.exceptions.RequestException as e:
        print(f"Error fetching weather data: {e}")
    except KeyError:
        print("City not found. Please check the city name and try again.")

def main():
    print("Welcome to the Weather CLI App!")
    city = input("Enter the name of a city: ")
    get_weather(city)

if __name__ == "__main__":
    main()
